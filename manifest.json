{
  "manifest_version": 3,
  "name": "Splice Multi-Download Ninja",
  "version": "1.0",
  "description": "Download multiple Splice sounds at once like a true web shinobi.",
  "permissions": ["downloads", "storage", "scripting", "tabs"],
  "host_permissions": ["*://splice.com/*"],
  "action": {
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.splice.com/*"],
      "js": ["js/interceptor.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.splice.com/*"],
      "js": ["js/jszip.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/jszip.min.js", "js/injected-sniffer.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
